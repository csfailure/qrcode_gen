<Function>:
    Screen:
        name: 'home'
        MDToolbar:
            md_bg_color: 0,0,0,1
            title: 'QR Code Generator'
            font_style: 'H5'
            pos_hint: {"top":1}
            specific_text_color: 1, 1, 1, 1
            elevation: 8
        BoxLayout:
            size_hint_y: .1
            size_hint_x: .8
            pos_hint: {'top':.8, 'center_x':0.5}
            MDTextFieldRound:
                id: link
                hint_text: "Enter Link"
            
        MDFillRoundFlatButton:
            text: 'Generate QR'
            pos_hint: {'center_x':.5,'center_y':.2}
            on_release: root.qrgen(root)
        
        MDFillRoundFlatButton:
            text: 'Show QR'
            pos_hint: {'center_x':.5,'center_y':.1}
            on_release: root.viewimg(root)

    
    Screen:
        name: 'im'

        BoxLayout:
            size_hint_y: .6
            pos_hint: {'center_y':.5}
            padding: 10
            Image:
                id: qr
        
        MDLabel:
            text: "QR Code"
            font_style: 'H5'
            pos_hint: {'center_y':.9}
            halign: 'center'
        
        MDFillRoundFlatButton:
            text: 'Try Again'
            pos_hint: {'center_x':.5,'center_y':.1}
            on_release: root.try_again(root)


                
    
    